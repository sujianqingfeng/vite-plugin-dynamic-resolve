{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@*": ["example/src/*"]
    }
  },
  "include": [
    "example/src/**/*.ts",
    "example/src/**/*.d.ts",
    "example/src/**/*.tsx",
    "example/src/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
